---
const { title = "hawks.tw", description = "技術、筆記、觀後感", } = Astro.props;
import "../styles/global.css";
---

<html lang="zh-Hant-TW" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="min-h-screen bg-[#111827] text-gray-100">
    <header class="max-w-5xl mx-auto px-6 py-6 flex items-center justify-between">
      <a href="/" class="font-bold text-xl tracking-wide">hawks.tw</a>
      <nav class="flex gap-5 text-sm">
        <a href="/tags">#tags</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <a href="/search">Search</a>
      </nav>
    </header>
    <main class="max-w-5xl mx-auto px-6 py-4">
      <slot />
    </main>
    <footer class="max-w-5xl mx-auto px-6 py-10 text-sm text-gray-400">
      © {new Date().getFullYear()} hawks.tw
    </footer>
    <script>
      // basic theme toggle (persist)
      const key="theme";
      const btn=document.getElementById("theme-toggle");
      btn?.addEventListener("click",()=>{
        const t=document.documentElement.classList.toggle("dark");
        localStorage.setItem(key, t?"dark":"light");
      });
      const saved=localStorage.getItem(key);
      if(saved==="light"){ document.documentElement.classList.remove("dark"); }
    </script>
  </body>
</html>
